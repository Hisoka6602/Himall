@{
    ViewBag.Title = "ProductSetting";
}
<script src="~/Areas/Admin/Scripts/appShopProductSetting.js"></script>
<script src="~/Scripts/jquery.himallLinkage.nocreate.js"></script>
<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Scripts/jquery.himallUpload.js"></script>
<script src="~/Scripts/jquery.productSelector2.js"></script>


<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li class="active"><a>商品管理</a></li>
    </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>此处设置的商品会显示在APP首页的“热销商品”下面。</span></li>
			</ul>
		</div>
	</div>
    <div class="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">所属商家</label>
                <input class="form-control input-ssm" type="text" id="shopName">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">商品名称</label>
                <input class="form-control input-ssm" type="text" id="searchBox">
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary btn-sm" id="searchButton">搜 索</button>
            </div>
        </form>
        <div class="col-sm-3 mb15"><a class="btn btn-primary btn-sm" id="addBtn"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp; 选择商品</a></div>
    </div>
    <table id="productList" class="table">
        <div class="tabel-operate" id="batchOperate">
            <button type="button" class="btn btn-default btn-ssm" onclick="DeleteList()">批量删除</button>
        </div>
    </table>
    <input type="hidden" id="categoryId" value="" />
</div>
