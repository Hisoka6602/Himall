@model Himall.Web.Models.AgreementModel

<script src="~/Scripts/ueditor/ueditor.config.js"></script>
<script src="~/Scripts/ueditor/ueditor.all.min.js"></script>
<style type="text/css">
	.tipBox{
		z-index: 1000;
	}
</style>
<div class="container">

    <ul class="nav nav-tabs-custom clearfix" id="navul">
        <li><a href="Settled">入驻参数配置</a></li>
        <li value="0" type="statusTab"><a>会员注册协议</a></li>
        <li value="3" type="statusTab"><a>隐私政策</a></li>
        <li value="1" type="statusTab"><a>卖家入驻协议</a></li>
        <li value="-1"><a href="SettledLink">入驻链接</a></li>
    </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>平台在此可以设置商家入驻时所需要填写的信息项。</span></li>
				<li><span>平台同时可以编辑会员注册，商家入驻时的协议文章。</span></li>
			</ul>
		</div>
	</div>
    @using (Html.BeginForm("UpdateAgreement", "Agreement", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <input type="hidden" value="@(ViewBag.Type)" id="hidRole" />
                <label for="" class="col-sm-2 control-label" id="ltlType">会员注册协议：</label>
                <div class="col-sm-9">
                    <textarea id="des" maxlength="10000" name="AdminAgreement">@Model.AgreementContent</textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="button" id="Save" class="btn btn-primary" value="保 存">
                </div>
            </div>
        </div>
    }
</div>
<script src="~/Areas/Admin/Scripts/Agreement.js?t=2020"></script>