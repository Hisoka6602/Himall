@model Himall.Web.Models.AgreementModel
<div class="container">

    <ul class="nav nav-tabs-custom clearfix">
        <li><a href="Settled">入驻参数配置</a></li>
        <li><a href="Management">会员注册协议</a></li>
        <li><a href="Management?type=3">隐私政策</a></li>
        <li><a href="Management?type=1">卖家入驻协议</a></li>
        <li class="active"><a href="SettledLink">入驻链接</a></li>
    </ul>
    <div class="queryDiv">
        <img class="queryImg" src="/Images/ic_query.png">
        <div class="tipBox">
            <h5>温馨提示:</h5>
            <ul>
                <li><span>平台在此可以设置商家入驻时所需要填写的信息项。</span></li>
                <li><span>平台同时可以编辑会员注册，商家入驻时的协议文章。</span></li>
            </ul>
        </div>
    </div>
    <div class="form-horizontal mt0">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label" style="padding-top:0px;">链接：</label>
            <div class="col-sm-9">
                <label class="" id="linkUrl" name="linkUrl">@ViewBag.LinkUrl</label>
                @*<input type="button" class="btn btn-default j-copy" value="复制" data-url="@ViewBag.LinkUrl" />*@
                <a id="copylink" data-url="@ViewBag.LinkUrl" href="javascript:void(0)">复制链接</a>
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">二维码：</label>
            <div class="col-sm-9">
                <img id="imgsrc" type="img" width="300" src="@ViewBag.Imgsrc" />
            </div>
        </div>
    </div>
</div>
<script src="/Scripts/clipboard.min.js"></script>
<script>
    $(function () {
        var clipboard = new Clipboard('#copylink', {
            text: function () {
                return $('#linkUrl').text();
            }
        });

        clipboard.on('success', function (e) {
            $.dialog.tips('复制成功');
        });

        clipboard.on('error', function (e) {
            console.log(e);
        });
    });
</script>
