@model Himall.Entities.MarketSettingInfo
@{
    ViewBag.Title = "优惠券设置";
}
<script src="~/Areas/Admin/Scripts/CouponServiceSetting.js"></script>
<script src="~/Scripts/v.js"></script>
<div class="container clear-v22">
    <ul class="nav nav-tabs-custom clearfix">
        <li><a href="./Management">商家优惠券购买列表</a></li>
        <li class="active"><a>服务费用设置</a></li>
        @*<li><a href="./CouponList">平台优惠券</a></li>
        <li><a href="@Url.Action("Add")">新增优惠券</a></li>*@

    </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>可以设置商家购买优惠券功能模块所需费用，购买后商家可以在所购买周期内发布优惠券活动 ，相关费用会在店铺的余额中扣除，余额不够的商家需要先进行充值。</span></li>
				<li><span>所有端都支持优惠券活动。</span></li>
			</ul>
		</div>
	</div>
    @using (Html.BeginForm("SaveServiceSetting", "Coupon", FormMethod.Post, new { id = "form1" }))
    {
		
		<div class="form-horizontal clear-v28">
            <div class="form-group v-server-mb30">
                <label class="col-sm-2 control-label" for="">服务价格：</label>
                 <div class="col-sm-3 v-server-error">@Html.EditorFor(item => item.Price, new { htmlAttributes = new { @class = "form-control input-sm" } })</div>
                 <div class="col-sm-5"><span class="help-default">设置优惠券服务的价格（按照每月计算）.</span></div>
            </div>
            <div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">保存</button>
				</div>
			</div>
        </div>
    }
</div>



