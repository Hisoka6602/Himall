
@{
  ViewBag.Title = "直播商品";
}

<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Scripts/jquery.himallLinkage.nocreate.js"></script>
<script src="~/Areas/Admin/Scripts/liveProduct.js?v=20200722"></script>

<div class="container">
  <ul class="breadcrumb clearfix">
    <li><a href="@Url.Action("Management")">直播列表</a></li>
    <li class="active"><a>直播商品</a></li>
  </ul>
  <div class="pd-white-box">
    <div class="search-box" id="search-box">
      <form id="search_form" class="form-inline custom-inline" method="post" target="_blank">
        <input type="hidden" id="hidRoomId" name="roomId" value="@ViewBag.RoomId" />
        <div class="form-group">
          <label class="label-inline w75" for="">商品名称</label>
          <input class="form-control input-ssm" type="text" id="txtProductName" name="productName">
        </div>
        <div class="form-group">
          <button type="button" id="searchButton" class="btn btn-primary btn-sm">搜 索</button>
        </div>
      </form>
    </div>
    <div class="table-act-row">
      <a class="btn btn-default pull-right btn-sm" id="aExport" href='javascript:;' style="margin-bottom: 20px;" onclick="ExportExecl();">导出查询结果</a>
    </div>
    <table id="list" class="table"></table>
  </div>
</div>

