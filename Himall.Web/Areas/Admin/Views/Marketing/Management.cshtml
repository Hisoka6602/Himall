        <span class="title">平台营销工具</span>
        <ul class="yxmunu">
            @if (currentSite.IsOpenH5 || currentSite.IsOpenApp || currentSite.IsOpenMallSmallProg)
            {
                <li><a href="/Admin/MobileTopic/management" id="9009"><i class="i13"></i><div class="tool-des"><span>移动端专题</span><br /><em>设置移动端专题</em></div></a></li>
            }
