@{ 
    var currentSite = Himall.Application.SiteSettingApplication.SiteSettings;
}

<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li class="active"><a href="Management">移动端专题列表</a></li>
        @if (currentSite.IsOpenH5)
        {
            <li><a target="_blank" href="@Url.Action("EditTemplate","VTemplate",new{ client=Himall.CommonModel.VTemplateClientTypes.WapSpecial.GetHashCode(),tName="0" })">新增微信端专题</a></li>
        }
        @if (currentSite.IsOpenApp)
        {
            <li><a target="_blank" href="@Url.Action("EditTemplate", "VTemplate", new { client = Himall.CommonModel.VTemplateClientTypes.AppSpecial.GetHashCode(), tName = "0" })">新增APP端专题</a></li>
        }
        @if (currentSite.IsOpenMallSmallProg)
        {
            <li><a target="_blank" href="@Url.Action("EditTemplate", "VTemplate", new { client = Himall.CommonModel.VTemplateClientTypes.WXSmallProgramSpecial.GetHashCode(), tName = "0" })">新增小程序专题</a></li>
        }
        </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>在编辑微信端、APP端首页时可以选择跳转至移动端专题页面。</span></li>
			</ul>
		</div>
	</div>
    <div class="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">标题</label>
                <input class="form-control input-ssm" type="text" id="titleKeyword">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">标签</label>
                <input class="form-control input-ssm" type="text" id="tagsKeyword">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">专题类型</label>
                <select class="form-control input-ssm" id="ddlPlatformType">
                    <option value="">全部</option>
                    @if (currentSite.IsOpenH5)
                    {
                    <option value="99">微信端</option>
                    }
                    @if (currentSite.IsOpenApp)
                    {
                    <option value="3">app端</option>
                    }
                    @if (currentSite.IsOpenMallSmallProg)
                    {
                    <option value="5">小程序</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary btn-sm" id="searchButton">搜 索</button>
            </div>
        </form>
    </div>
    <table id="topicGrid" class="table mt5 clear-v43"></table>
</div>

<div class="mobile-dialog">
    <iframe name="mobile-iframe" id="mobileshow" frameborder="0" scrolling="auto" src="about:blank"></iframe>
</div>
<div class="cover"></div>

<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Areas/Admin/Scripts/mobileTopicManagement.js?t=2019"></script>