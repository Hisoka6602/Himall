    <div class="form-group">
        <label class="label-inline fl" for="">输入框关键字</label>
        <input class="form-control input-sm input-no-sp" type="text" id="txtkeyword">
    </div>
    <div class="form-group">
        <label class="label-inline fl" for="">热门关键字</label>
        <input class="form-control input-sm input-no-sp" type="text" id="txthotkeywords">
    </div>
</div>