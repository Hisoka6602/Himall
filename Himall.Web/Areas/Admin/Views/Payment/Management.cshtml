
<link href="~/Content/jquery.onoff.css.css" rel="stylesheet"/>
<script src="~/Scripts/jquery.onoff.min.js"></script>
<script src="~/Areas/Admin/Scripts/PaymentMangement.js"></script>
<style type="text/css">
	th{
		position: relative;
	}
	.tip{
		right: 0;
	}
	.tipBox{
		left: 30px;
	    top: -10px;
	}
	.tipBox:before{
		left: -5px;
    	top: 10px;
    	transform: rotateZ(45deg);
	}
	.queryDiv:hover{ width: auto; height: auto;}
</style>
<div class="container clear-q7">
    <!--<ul class="nav nav-tabs-custom clearfix">
        <li class="active"><a>支付方式</a></li>
    </ul>-->
    <table class="table">
        <thead>
            <tr>
                <th class="clear-i2" style="padding-left:5px">线上支付
                	<div class="queryDiv" style="right: 620px;top: 14px;">
						<img class="queryImg" src="/Images/ic_query.png">
						<div class="tipBox">
							<h5>温馨提示:</h5>
							<ul>
								<li><span>展示所有平台支持的支付方式的相关信息列表。</span></li>
								<li><span>可进行打开或关闭相应的支付方式。</span></li>
								<li><span>配置好相应支付方式后，用户购物时便可使用相应的支付方式，请谨慎关闭。</span></li>
							</ul>
						</div>
					</div>
                </th>
                <th>开关</th>
                <th class="td-operate clear-i2" style="padding-left:5px">操作</th>
            </tr>           
        </thead>
        <tbody>
            <tr>
                @{
                    string controller, action;

                }
                @foreach (var paymentPlugin in Model)
                {
                <tr>
                    <td class="clear-i2">@paymentPlugin.name</td>
                    <td width="100px">
                        @*<div class="switch switch-mini"><input class="bootstrapSwitch" type="checkbox" data-size="mini" data-on-text="开启" data-off-text="关闭"  /></div>*@
                        <input type="checkbox" pluginid="@paymentPlugin.pluginId" class="pluginCheck" @(paymentPlugin.enable ? "checked" : "")>

                    </td>
                    <td class="td-operate clear-i2"><span class="btn-a"><a href="edit?pluginId=@(paymentPlugin.pluginId)">编辑</a></span></td>
                </tr>
                }
            </tbody>
        </table>

    <table class="table clear-q8" style="display:none;">
        <thead>
            <tr>
                <th>
                	线下收款
                	<div class="queryDiv" style="right: 630px;top: 14px;">
						<img class="queryImg" src="/Images/ic_query.png">
						<div class="tipBox">
							<h5>温馨提示:</h5>
							<ul>
								<li><span>货到付款目前仅支持自营商家的商品，平台可以设置支持货到付款的地区。</span></li>
							</ul>
						</div>
					</div>
                </th>
                <th></th>
                <th class="td-operate"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>货到付款 (仅官方自营店可用)</td>
                <td width="100px">
                    @*<div class="switch switch-mini"><input class="bootstrapSwitch2" type="checkbox" data-size="mini" data-on-text="开启" data-off-text="关闭"  /></div>*@
                    <input type="checkbox" class="payWayCheck" @( ViewBag.IsReceivingAddress ? "checked" : "")>
                </td>
                <td class="td-operate clear-i2"><span class="btn-a"><a href="PaymentConfig">区域设置</a></span></td>
            </tr>
        </tbody>
    </table>
    </div>

