        $('#OrganizationCodePhoto').himallUpload({
            title: '<b>*</b>组织机构代码证<br>电子版：',
            imageDescript: '请确保图片清晰。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(Model.OrganizationCodePhoto))',
            imgFieldName: "OrganizationCodePhoto",
