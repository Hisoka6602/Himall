        $('#GeneralTaxpayerPhot').himallUpload({
            title: '<b>*</b>一般纳税人证明：',
            imageDescript: '请确保图片清晰。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(Model.GeneralTaxpayerPhot))',
