    <a class="export-data" id="aMonthExport" href='javascript:;' onclick="ExportExecl()">导出数据</a>
    <div class="form-inline custom-inline sdata-trade">
        <div class="form-group pdata">
            <a class="active" id="defaultBtn" onclick="LoadData('@DateTime.Now.Date.AddDays(-1).ToString("yyyy-MM-dd")','@DateTime.Now.Date.AddDays(-1).ToString("yyyy-MM-dd")')">昨天</a>
            <a onclick="LoadData('@DateTime.Now.Date.AddDays(-7).ToString("yyyy-MM-dd")','@DateTime.Now.Date.AddDays(-1).ToString("yyyy-MM-dd")')">最近7天</a>
            <a onclick="LoadData('@DateTime.Now.Date.AddDays(-30).ToString("yyyy-MM-dd")','@DateTime.Now.Date.AddDays(-1).ToString("yyyy-MM-dd")')">最近30天</a>
        </div>
        <div class="form-group">
            <input id="inputStartDate" class="form-control input-ssm w220 start_datetime has-dateicon" value="" placeholder="区间日期" type="text">
            <i class="glyphicon glyphicon-calendar"></i>
        </div>
