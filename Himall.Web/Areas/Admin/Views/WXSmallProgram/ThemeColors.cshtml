        primaryTxtColor = '#ffffff'
        secondaryColor = '#ffadc3';
        secondaryTxtColor = '#7a0020';
        lightColor = hex2rgb(primaryColor, 0.1);
        change()
    })

    function change() {
        $('.price').css('color', primaryColor);
        $('.button,#btnbuy').css('background-color', primaryColor);
        $('.skus').css('color', primaryTxtColor);
        $('.skus').css('background-color', primaryColor);
        $('.theme-preview-box').css('background-color', primaryColor);
        $('.button,#btnbuy').css('color', primaryTxtColor);

        $('#btnaddcart').css('background-color', secondaryColor);
        $('#btnaddcart').css('color', secondaryTxtColor);
    }

    $(function () {
        $(".themebox").each(function (index) {
            if (rgb2hextrue($(this).find(".color-box").eq(0).css("background-color")) == primaryColor) {
                $(this).click();
                return false;
            }
        })
        change();
    });
    function rgb2hextrue(rgb) {
        rgb = rgb.match(/^rgb\((\d+),\s*(\d+),\s*(\d+)\)$/);
        function hex(x) {
                return ("0" + parseInt(x).toString(16)).slice(-2);
        }
        return "#" + hex(rgb[1]) + hex(rgb[2]) + hex(rgb[3]);
    }
    //hex2rgb 
    function hex2rgb (hex, alpha) {
        var rgb = [0, 0, 0];
        if (/#(..)(..)(..)/g.test(hex)) {
            rgb = [parseInt(RegExp.$1, 16), parseInt(RegExp.$2, 16), parseInt(RegExp.$3, 16)];
            rgb.push(alpha);
        };
        return "rgba(" + rgb.join(",") + ")";
    }
</script>
