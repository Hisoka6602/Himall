<script>
    var primaryColor = $('#primaryColor').val() || '#fb1438',
        primaryTxtColor = $('#primaryTxtColor').val() || '#ffffff',
        secondaryColor = $('#secondaryColor').val() || '#515151',
        secondaryTxtColor = $('#secondaryTxtColor').val() || '#ffffff',
        lightColor;
    function saveColor() {
        var loading = showLoading();
        $.ajax({
            type: "post",
            url: '/admin/WXSmallProgram/SaveSiteSettings',
            data: { primaryColor: primaryColor, primaryTxtColor: primaryTxtColor, secondaryColor: secondaryColor, secondaryTxtColor: secondaryTxtColor },
            dataType: "json",
            success: function (data) {
                loading.close();
                if (data) {
                    if (data.success == true) {
                        $.dialog.tips('保存成功', function () {
                            location.href = location.href;
                        });
                    } else {
                        $.dialog.errorTips(data.message);
                    }
                } else {
                    $.dialog.errorTips('保存失败！');
                }
            },
            error: function (data) {
                loading.close();
                $.dialog.errorTips('保存失败！');
            }
        });
    }
    function primarySelector() {
        $('.colorpicker').eq(0).toggle()
        $('.colorpicker').eq(1).hide()
    }
    function secondarySelector() {
        $('.colorpicker').eq(1).toggle()
        $('.colorpicker').eq(0).hide()
    }

    $(".theme-row .themebox").click(function () {
        $(this).addClass('active').siblings().removeClass('active')
    })

    $('.theme1').click(function () {
        primaryColor = '#fb1438'
        primaryTxtColor = '#ffffff'
        secondaryColor = '#424242';
        secondaryTxtColor = '#ffffff';
        lightColor = hex2rgb(primaryColor, 0.1);
        change()
    })
    $('.theme2').click(function () {
        primaryColor = '#ff5500'
        primaryTxtColor = '#ffffff'
        secondaryColor = '#ff9900';
        secondaryTxtColor = '#ffffff';
        lightColor = hex2rgb(primaryColor, 0.1);
        change()
    })
    $('.theme3').click(function () {
        primaryColor = '#ffbb00'
        primaryTxtColor = '#000000'
        secondaryColor = '#3f464b';
        secondaryTxtColor = '#ffffff';
        lightColor = hex2rgb(primaryColor, 0.1);
        change()
    })
    $('.theme4').click(function () {
