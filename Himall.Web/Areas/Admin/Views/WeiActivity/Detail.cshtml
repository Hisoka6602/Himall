@model Himall.DTO.WeiActivityModel

<iframe name="iframeUpload" src="" width="350" height="35" frameborder="0" scrolling="no" style="display:none" id="iframe"></iframe>
<form></form>


<div class="container clear-v30">
    <ul class="breadcrumb clearfix">
        <li><a href="@Url.Action("management")">管理</a> </li>
        <li class="active"><a>刮刮卡详情</a></li>
    </ul>
    <div class="queryDiv">
        <img class="queryImg" src="/Images/ic_query.png">
        <div class="tipBox">
            <h5>温馨提示:</h5>
            <ul>
                <li><span>刮刮卡活动奖励分为三种：积分、奖品红包、优惠券。其中优惠券必须为主动发放类型。</span></li>
                <li><span>目前仅微信端、APP支持刮刮卡活动。</span></li>
            </ul>
        </div>
    </div>
    @using (Ajax.BeginForm("", "", null
        , new AjaxOptions { HttpMethod = "post", OnBegin = "beginpost", OnSuccess = "successpost" }
        , new { @class = "form-horizontal", id = "gifteditform" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label for="" class="col-sm-2 control-label"> 刮刮卡链接地址：</label>
            <div class="col-sm-10 form-control-static">
                <span id="signlink"> @(Himall.Application.SiteSettingApplication.GetCurDomainUrl() + "/m-Mobile/ScratchCard/index/" + @Model.Id)</span>
                <a id="copylink" href="#">复制链接</a>
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label"> 活动有效期：</label>
            <div class="col-sm-6 form-control-static">
                @Model.validTime
            </div>

        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label"> 活动二维码：</label>
            <div class="col-sm-6 form-control-static">
                <img src="@Model.codeUrl" />
            </div>
        </div>

        <div class="pro-detail-btn clearfix">


            <button type="button" class="btn btn-primary mt20 big-w" id="subCate">查看活动</button>


        </div>

    }
</div>
<script src="~/Scripts/jquery.productSelector.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="/Scripts/clipboard.min.js"></script>
<script>
    $(function () {
        var clipboard = new Clipboard('#copylink', {
            text: function () {
                return $('#signlink').text();
            }
        });

        clipboard.on('success', function (e) {
            $.dialog.tips('复制成功');
        });

        clipboard.on('error', function (e) {
            console.log(e);
        });
    });
</script>
<script type="text/javascript">
    $(function () {
        var url = location.search; //获取url中"?"符后的字串
        var theRequest = new Object();
        var show = url.substr(1).split('=')[1];
        if (show=="no") {
            $(".Sclear-P71").css("display", "none");
        }

        $("#subCate").click(function () {
            window.location.href =' @Url.Action("management")';
        });
    });

</script>








