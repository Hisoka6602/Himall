@model Himall.Web.Areas.Admin.Models.Market.BonusModel
@{Layout = null;}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>红包领取</title>
    <link href="~/Content/bootstrap.min.css?v=20183030" rel="stylesheet" />
    <link href="~/Areas/Mobile/Templates/Default/Content/custom.css?v=20183030" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery-migrate-3.3.0.min.js"></script>

    <style>
        body, html, .container {
            height: 100%;
        }
    </style>
</head>
<body>
	<script>
		var winxinShareArgs = {
			success: function(){
				LoadBody();
				$( '.bonus' ).height( $( '.bonus' ).width() * 39 / 28 );
			},
			error:function(){
				$.dialog.errorTips('注册微信接口失败，请刷新页面');
			},
			share: {
			    title: '@Model.Name',
			    desc: '@Model.Description',
			    link: '@Model.ReceiveHref',
			    imgUrl: '@(Himall.Core.HimallIO.GetRomoteImagePath(Model.ImagePath))'
			}
		};
	</script>
	@Html.Partial("_WeiXinShare")
	<script type="text/javascript">
		function LoadBody()
		{
			var html = "";
			html += '<div class="container">';
			html += '<div class="b-cover"></div>';
			html += '<div class="bonus">';
			html += '<img src="@Model.ImagePath" />';
			html += '<h3>@Model.MerchantsName</h3>';
			html += '<h5>当前活动还未开始！</h5>';
			html += '</div>';
			html += '</div>';

			$("body").html(html);
		}
	</script>
</body>
</html>