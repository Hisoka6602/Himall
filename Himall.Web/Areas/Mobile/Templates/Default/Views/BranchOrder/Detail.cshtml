        $.dialog.alert( "很遗憾，该维权入口已经关闭<br/>1、交易已过退货维权受理期,您无法发起退换货<br/>2、请在帮助中心查看平台退换货流程", '', 2000 );
    }

    $(document).on('click','.cover,.custom-dialog-header .close',function () {
        if ($('.custom-dialog').is(':visible')){
            $('.cover,.custom-dialog').fadeOut();
        }
    });
</script>