<script type="text/javascript">
  var pageIndex = 1;
  var hasData = true;
  $(document).ready(function () {
    //设置Poi检索服务，用于本地检索、周边检索
    window.searchService = function (res) {
      var pois = res.data;
      if (pois == undefined) {
        //$("#divMore").html("查询不到数据");
        //selectCityName = selectAreaName;
        searchKeyword(1);
      }
      else {
        for (var i = 0, l = pois.length; i < l; i++) {
          var poi = pois[i];
          if (typeof (poi.address) != "undefined") {
            var parText = "\'" + poi.location.lat + ',' + poi.location.lng + "\'" + "," + "\'" + poi.address + "\'" + "," + "\'" + poi.title + "\'";
            $("#nearAddress").append('<li data-addr=\"' + poi.address + '\" onclick="choosePosition(' + parText + ')"><h3>' + poi.title + '</h3><p>' + poi.address + '</p></li>');
          }
        }
        if (pois.length < 20) {
          $("#divMore").html("附近没有更多地址了");
          hasData = false;
        }
        else {
          //$("#divMore").html("加载更多...");
        }
        pageIndex++;
      }
    }
    $("#divAdr").hide();
    var isopenstore = $('#isOpenStore').val();
    var timer;
    if (isopenstore == 'True') {
      $("#txtKeyWord").bind('input propertychange', function () {
        clearTimeout(timer)
        timer = setTimeout(function () {
          var keyword = $("#txtKeyWord").val();
          if (keyword.length > 0) {
            searchKeyword(1);
          }
        }, 500);
      });
      $("#txtKeyWord").focus(function () {
        setTimeout(function () {
          var keyword = $("#txtKeyWord").val();
          if (keyword.length > 0) {
            searchKeyword(1);
          }
        }, 300);
      });
    }
  });

  //设置搜索的范围和关键字等属性
  function searchKeyword(index) {
    if (!isRefresh && index == 2) {
      isRefresh = true;
      return;
    }
    //$("#container").hide();
    $("#divAdr").show();
    var keyword = $("#txtKeyWord").val();
    if (keyword == "") {
      $.dialog.errorTips("请输入要搜索的地址信息");
      return;
    }
    //var region = selectCityName;
    var region = "";
    if (selectProviceName != null && selectProviceName.length > 0) {
      var lastname = selectProviceName.substring(selectProviceName.length - 1, selectProviceName.length);//获取最后一个字判断是否是省或自治区
      if (lastname == "省" || selectProviceName.indexOf("自治区") != -1) {
        region = selectProviceName;
      }
    }
    if (selectCityName !== "请选择" && selectCityName !== "其他") {
      region = region + selectCityName;//精确到省市
    }
    if (selectAreaName !== "请选择" && selectAreaName !== "其他") {
      region = region + selectAreaName;//精确到省市区
    }

    if (index == 1) {
      pageIndex = 1;
      hasData = true;
      $("#nearAddress").empty();
    }
    else {
      if (!hasData) {
        return;
      }
    }

    //根据输入的城市设置搜索范围
    setSearchServiceOption(region, keyword)
  }
  //--------滚动时，往下加载数据 start--------------

  function setSearchServiceOption(region, keyword) {
    mapServiceRequest({
      keyword: keyword,
      boundary: 'region(' + region + ',0)',
      page_index: pageIndex,
      page_size: 20,
      output: 'jsonp'
    })
  }

