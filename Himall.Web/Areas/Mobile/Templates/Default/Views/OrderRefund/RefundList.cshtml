@{
    ViewBag.Title = "退款/售后";
}
<script src="~/Areas/Mobile/Templates/Default/Scripts/RefundList.js?v=20183030"></script>
<div class="container refund-list">
    <ul class="order-list refund-list" id="productList">

    </ul>

    <div class="reback-dialog">
          <span class="glyphicon glyphicon-remove"></span>
          <label><span>商家退货地址：</span></label>
        <label><span id="shopsendaddress"></span></label>
          <label><span>快递公司：</span><input type="text" id="expressCompanyName"> </label>
          <label><span>快递单号：</span><input type="text" id="shipOrderNumber"> </label>
          <p class="reback-submit" id="btnOK">确认</p>
    </div>
    <div class="coverage"></div>
</div>

<script>
$(function () {
	var u = navigator.userAgent;
	if (u.indexOf('Android') > -1 || u.indexOf('Linux') > -1) {//安卓手机
		$("input").on("focus",function(){
			setTimeout(function(){
				$(".reback-dialog").css("top","-20%");
			},100);
		});
		$("input").on("blur",function(){
			$(".reback-dialog").css("top","0");
		});
	} 
})
</script>