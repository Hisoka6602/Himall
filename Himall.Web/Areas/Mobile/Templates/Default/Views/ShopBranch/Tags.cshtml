@model Himall.DTO.ShopBranchTagModel
@{
    Layout = "../Shared/_Base.cshtml";
    ViewBag.Title = "周边门店标签";
    ViewBag.ShowAside = 1;  // 显示更多按钮
}

<link href="~/Areas/Mobile/Templates/Default/Content/shopbranchs.css?v=20183030" rel="stylesheet" />

<div class="storelist">
    <div class="top-info no-bg-top">
        <span class="search" style="width:100%">
            <form action="">
                <input id="searchInput" type="search" placeholder="附近商家的商品" value="" />
                <i class="glyphicon glyphicon-search" id="searchBtn"></i>
            </form>
        </span>
    </div>

    <div class="store-container">
        <div><span></span></div>
        <div>&nbsp;</div>
        <div class="tag-linkname">
            <span>@Model.Title</span>
        </div>
        <ul class="list-ul" id="store_list"></ul>
    </div>
</div>
<div id="divMore" class="no_more" style="display:none" onclick="loadStoresData()">
    加载更多...
</div>
<input type="hidden" id="hidLatitude" />
<input type="hidden" id="hidLongitude" />
@{Html.RenderPartial("~/Areas/Mobile/Templates/Default/Views/Shared/_Aside.cshtml");}
@Html.Hidden("hdQQMapKey", (string)ViewBag.QQMapKey)
@Html.Action("JsMapQQKey", "WebCommon", new { area = "Web" })
<script charset="utf-8" src="https://3gimg.qq.com/lightmap/components/geolocation/geolocation.min.js"></script>
<script src="~/Scripts/custom.js?v=20183030"></script>
<script src="~/Areas/Mobile/Templates/Default/Scripts/NearShopBranchTags.js?v=20183030"></script>
<script src="/Scripts/swipe-template.js"></script>
<script type="text/javascript">
    var tagsId = '@Model.Id';
    var tagsSearchUrl = '@Url.Action("TagsSearch")';
    var tagsSearchProductUrl = '@Url.Action("GetShopBranchProductAndSaleCount")';
    var shopBranchIndexUrl = '@Url.Action("Index")';
    var shopBranchSearchUrl = '@Url.Action("SearchList")';
</script>