@using Himall.Core;
@model Himall.DTO.ShopProfileStep1
@{
    ViewBag.Title = "公司信息";
}
<script type="text/javascript" src="https://res.wx.qq.com/open/js/jweixin-1.3.2.js"></script>
<link rel="stylesheet" type="text/css" href="~/Areas/Mobile/Templates/Default/Content/mui.min.css" />
<link rel="stylesheet" type="text/css" href="~/Areas/Mobile/Templates/Default/Content/mui.picker.css" />
<link rel="stylesheet" type="text/css" href="~/Areas/Mobile/Templates/Default/Content/mui.poppicker.css" />

<style type="text/css">
    body { height: 100%; padding-bottom: .5rem; }

    #tips { display: none !important; }

    .mui-input-row label ~ input { padding: 8px 15px; }
    .select-addr:before { top: 0; }
    .mui-input-row label ~ select.mui-input { line-height: 20px; padding: 8px 15px; height: 0.48rem; margin-top: 0; font-size: .1279rem; color: #616161; }
</style>
