
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">

        <li class="active"><a href="Management">专题列表</a></li>
        @if ((bool)ViewBag.isOpenH5)
        {
            <li><a target="_blank" href="@Url.Action("EditTemplate","VTemplate",new{ client=Himall.CommonModel.VTemplateClientTypes.SellerWapSpecial.GetHashCode(),tName="0" })">新增微信专题</a></li>
        }
        @if ((bool)ViewBag.issmallpro)
        {
            <li><a target="_blank" href="@Url.Action("EditTemplate","VTemplate",new{ client=Himall.CommonModel.VTemplateClientTypes.SellerWxSmallProgramSpecial.GetHashCode(),tName="0" })">新增小程序专题</a></li>
        }
    </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>在编辑微信端、小程序首页时可以选择跳转至移动端专题页面。</span></li>
			</ul>
		</div>
	</div>
    <div class="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">标题</label>
                <input class="form-control input-ssm" type="text" id="titleKeyword">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">标签</label>
                <input class="form-control input-ssm" type="text" id="tagsKeyword">
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary btn-sm" id="searchButton">搜 索</button>
            </div>
        </form>
    </div>
    <table id="topicGrid" class="table mt5 Sclear-P31"></table>
</div>

<div class="mobile-dialog">
    <iframe name="mobile-iframe" id="mobileshow" frameborder="0" scrolling="auto" src="about:blank"></iframe>
</div>
<!--<div class="cover"></div>-->
<script type="text/javascript">
    $(document).on('click', '.view-mobile-shop', function() {
        $("#mobileshow").attr("src", $(this).attr("data-url"));
        $('.mobile-dialog').show();
        $('.cover').fadeIn();
    } );
    $(document).on('click', '.cover', function() {
        $('.mobile-dialog').hide();
        $("#mobileshow").attr("src", "about:blank");
        $('.cover').fadeOut();
    });
</script>
<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/mobileTopicManagement.js?v=2"></script>
