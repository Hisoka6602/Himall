    <div class="order-detail-list">
        <h3><span></span>订单清单</h3>
        <table id="tbOrderItems" class="table no-hover bgcolor-f9">
            <thead>
                <tr>
                    <th width="30%" class="text-center">商品</th>
                    <th width="10%" class="text-center">规格</th>
                    <th width="10%" class="text-center">单价/数量</th>
                    <th width="7%" class="text-center">总价</th>
                    @if (Model.OrderStatus == OrderInfo.OrderOperateStatus.WaitPay && itemDis != 0)
                    {
                        <th width="8%" class="text-center">改价</th>
                    }
                    @if ((bool)ViewBag.UpdatePrice == true || itemDis != 0)
                    {
                        <th width="20%" class="text-center">商家改价</th>
                    }
                    @if (Model.OrderStatus == OrderInfo.OrderOperateStatus.WaitPay && (bool)ViewBag.UpdatePrice == true&&Model.OrderType!=OrderInfo.OrderTypes.Virtual)
                    {
                        <th width="15%" class="text-center">运费</th>
                    }
                </tr>
            </thead>
            <tbody>
                @{
                    var freightProductGroup = ViewBag.freightProductGroup as IEnumerable<IGrouping<long, OrderItemInfo>>;
                }                
                
                @foreach (var items in freightProductGroup)
                {
                    foreach (var orderItem in items)
                    {
                        <tr class="product tac">
                            <td class="tal">
                                <a target="_blank" href="/product/detail/@orderItem.ProductId">
                                    <img class="Sclear-H3" width="50" height="50" title="" src="@(orderItem.ThumbnailsUrl.Contains("skus")?Himall.Core.HimallIO.GetImagePath(orderItem.ThumbnailsUrl):Himall.Core.HimallIO.GetProductSizeImage(orderItem.ThumbnailsUrl, 1, (int)Himall.CommonModel.ImageSize.Size_50))"><span>@orderItem.ProductName</span>
                                </a>
                            </td>
                            <td>@orderItem.Color @orderItem.Size @orderItem.Version</td>
                            <td>@orderItem.SalePrice.ToString("F2") * @orderItem.Quantity</td>
                            <td style="color:#ff2c40" class="producttotal">@(orderItem.SalePrice * orderItem.Quantity)</td>
                            @if (Model.OrderStatus == OrderInfo.OrderOperateStatus.WaitPay && itemDis != 0)
                            {
                                if (orderItem.DiscountAmount > 0)
                                {
                                    <td style="color:#ff2c40">
                                        -@orderItem.DiscountAmount.ToString("F2")
                                    </td>
                                }
                                else
                                {
                                    <td style="color:#ff2c40">
                                        +@Math.Abs(orderItem.DiscountAmount).ToString("F2")
                                    </td>
                                }
                            }
                            @if ((bool)ViewBag.UpdatePrice == true || itemDis != 0)
                            {
                                if (Model.OrderStatus == OrderInfo.OrderOperateStatus.WaitPay && (bool)ViewBag.UpdatePrice == true)
                                {
                                    <td>
                                        <select name="updateWay" class="Sclear-H5" style="padding: 0 30px 0 5px!important">
                                            <option value="1">减</option>
                                            <option value="2">增</option>
                                        </select>
                                        <input id="inputDiscount@(orderItem.Id)" onkeyup="(this.v = function () { this.value = this.value.replace(/[^\d.]/g, ''); }).call(this)" onblur="this.v()" class="text-order no-m" type="text" style="width: 60px;border:1px solid #c6c6c6;border-radius:0;">
                                        <span class="cg-b" itemid="@orderItem.Id">确认</span>
                                    </td>
                                }
                                else
                                {
                                    if (itemDis != 0)
                                    {
                                        if (orderItem.DiscountAmount > 0)
                                        {
                                            <td style="color:#ff2c40">
                                                -@orderItem.DiscountAmount.ToString("F2")
                                            </td>
                                        }
                                        else
                                        {
                                            <td style="color:#ff2c40">
                                                +@Math.Abs(orderItem.DiscountAmount).ToString("F2")
                                            </td>
                                        }
                                    }
                                }
                            }
                            @if (row == 0 && Model.OrderStatus == OrderInfo.OrderOperateStatus.WaitPay && (bool)ViewBag.UpdatePrice == true)
                            {
                                <td rowspan="@(orderitems.Count())" class="rowspan">
                                    <input id="freight" value="@Model.Freight.ToString("F2")" onkeyup="(this.v = function () { this.value = this.value.replace(/[^\d.]/g, ''); }).call(this)" onblur="this.v()" class="text-order no-m" type="text" style="width: 60px;border:1px solid #c6c6c6;border-radius:0;">
                                    <span id="updateFreight">确认</span>
                                </td>
                            }
                            
                        </tr>
                        row = row + 1;
                    }
                }
            </tbody>
        </table>
