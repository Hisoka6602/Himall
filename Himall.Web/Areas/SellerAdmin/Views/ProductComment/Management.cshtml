<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Scripts/jqeury.himallLinkage.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/ProductComment.js"></script>
@{ var isReply = (int)ViewBag.isReply;}
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">

        <li flag="" onclick="query('')"><a>全部</a></li>
        <li flag="false" onclick="query('false')"><a id="notReply">未处理</a></li>

    </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>可以对评论进行回复，与用户进行互动，但不可以删除评论（只有平台有权删除）。</span></li>
			</ul>
		</div>
	</div>
    <div class="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">商品名称</label>
                <input class="form-control input-ssm" type="text" id="txtProductName">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">评分</label>
                <select id="selmark" class="form-control input-ssm">
                    <option value="-1">全部</option>
                    <option value="0">好评</option>
                    <option value="1">中评</option>
                    <option value="2">差评</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-inline Sclear-E1" for="">查看追加的评论</label>
                <div class="checkbox">
                    <label><input type="checkbox" id="hasAppend" value="true"></label>
                </div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary btn-sm" id="searchBtn">搜 索</button>
            </div>
        </form>
    </div>
    <table class="table Sclear-E" id="list"></table>
    <div class="cover"></div>
    <div class="preview-img"><img src="" /></div>
</div>
<div class="dialog-form" id="reply-form" style="display:none"></div>
<input type="hidden" id="isReply" name="isReply" value="@isReply" />