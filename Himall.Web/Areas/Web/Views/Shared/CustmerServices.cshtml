@model List<Himall.DTO.CustomerService>
@{
    Layout = null;
}
<!--CustmerServices start-->
@{ var customerservices = Model; }
@if (customerservices.Count > 0)
{
    if (customerservices.Count > 1)
    {
        <s></s><i class="customer"><b></b><em>客服</em></i>
        <span>
            @foreach (var item in customerservices)
            {
                if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.MeiQia)
                {
                    <a href="javascript:void(0)" onclick="commonJS.callMeiQiaCS('@item.AccountCode')" title="@item.Name">
                        <div class="online-service">
                            <img src="/images/meiqia_icon.png" />
                            <em>@item.Name</em>
                        </div>
                    </a>
                }

                else if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.QQ)
                {
                    <a target="_blank" href="http://wpa.qq.com/msgrd?v=3&amp;uin=@item.AccountCode&amp;site=qq&amp;menu=yes" title="@item.Name">
                        <div class="online-service">
                            <i class="qq-img"></i>
                            <em>@item.Name</em>
                        </div>
                    </a>
                }

                else if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.Wangwang)
                {
                    <a target="_blank" href="https://www.taobao.com/webww/ww.php?ver=3&touid=@(item.AccountCode)&siteid=cntaobao&status=2&charset=utf-8" class="vm" title="@(item.Name)">
                        <div class="online-service">
                            <img border="0"
                                 src="https://amos.im.alisoft.com/online.aw?v=2&amp;uid=@(item.AccountCode)&amp;site=cntaobao&amp;s=2&amp;charset=UTF-8" alt="Wang Wang"
                                 style=" vertical-align: middle;">
                            <em>@item.Name</em>
                        </div>
                    </a>
                }

                else if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.HiChat)
                {
                    <a href="javascript:void(0)" onclick="OpenHiChat('@item.AccountCode')" title="@item.Name">
                        <div class="online-service">
                            <img src="/images/hichat.png" />
                            <em>@item.Name</em>
                        </div>
                    </a>
                }
            }
        </span>
    }
    else
    {

        foreach (var item in customerservices)
        {
            if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.MeiQia)
            {
                <a href="javascript:void(0)" onclick="commonJS.callMeiQiaCS('@item.AccountCode')" title="@item.Name"><s></s><i class="customer"><b></b><em>客服</em></i></a>
            }
            else if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.QQ)
            {
                <a class="qq_icon_one" target="_blank" href="http://wpa.qq.com/msgrd?v=3&amp;uin=@item.AccountCode&amp;site=qq&amp;menu=yes" title="@item.Name">
                    <s></s><i class="customer"><b></b><em>客服</em></i>
                </a>
            }
            else if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.Wangwang)
            {
                <a class="qq_icon_one" target="_blank" href="https://www.taobao.com/webww/ww.php?ver=3&touid=@(item.AccountCode)&siteid=cntaobao&status=2&charset=utf-8" title="@item.Name">
                    <s></s><i class="customer"><b></b><em>客服</em></i>
                </a>
            }
            else if (item.Tool == Himall.Entities.CustomerServiceInfo.ServiceTool.HiChat)
            {
                <a href="javascript:void(0)" onclick="OpenHiChat('@item.AccountCode')" title="@item.Name"><s></s><i class="customer"><b></b><em>客服</em></i></a>
            }
        }
    }
}
<!--CustmerServices end-->