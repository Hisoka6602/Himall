<!--Foot start-->
<div class="j_nopointer footer">
    <div class="site-footerimg j_footerimg"><img src="@(Himall.Core.HimallIO.GetImagePath(SiteSetting.PCBottomPic))" width="1190" height="100" />@*<img src="~/Areas/Web/Images/footerimg_03.png" />*@</div>
    <div class="warpa">
        <div class="footer-service cl">
            <div class="fc-logo j_logo">
                <img src="@(Himall.Core.HimallIO.GetImagePath(SiteSetting.Logo))" style="max-height:50px;_height:50px;" />
            </div>
            <div class="fc-left clearfix">
                @{
                    int i = 1;
                    var pageFootService = (IEnumerable<Himall.Web.Areas.Web.Models.FootNoticeModel>)ViewBag.PageFootService;
                }
                @if (pageFootService != null)
                {
                    foreach (var t in pageFootService)
                    {
                        if (t != null)
                        {
                            <dl class="fore@(i++)">
                                <dt><strong>@t.CateogryName</strong></dt>
                                <dd>
                                    @{var articles = (IEnumerable<Himall.Entities.ArticleInfo>)t.List;}
                                    @if (articles != null)
                                    {
                                        foreach (var article in t.List)
                                        {
                                            if (null != article)
                                            {
                                                <p><a href="@Url.Action("Details", "Article", new { id = article.Id }) " target="_blank" rel="nofollow">@article.Title</a></p>
                                            }
                                        }
                                    }
                                </dd>
                            </dl>
                        }
                    }
                }
            </div>
            <div class="qrcode">
                <img class="lazyload" src="@(Himall.Core.HimallIO.GetImagePath(ViewBag.QRCode))" />
                <h3>扫码关注</h3>
                <p>@(ViewBag.SiteName)官方微信</p>
            </div>
        </div>
    </div>

    <div class="copyright">
        <div class="warp">
            @{string pageFoot = ViewBag.PageFoot == null ? string.Empty : ViewBag.PageFoot as string;}
            @Html.Raw(pageFoot)
        </div>
    </div>
</div>
<!--Foot end-->
@{
    string footScript = this.SiteSetting.FlowScript;
    if (!string.IsNullOrWhiteSpace(footScript))
    {
<div class="j_flowScript">@Html.Raw(footScript)</div>
    }
}