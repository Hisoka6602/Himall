<div class="box1 lh24">
    <div class="title bot-border">
        <h3 class="title_txt cur">收货地址管理</h3>
    </div>
    <div class="border-box">
        <div class="mod lh24">
            <div class="pd10">
                <span class="al">已保存的收货地址</span>
                <span class="ftx-03">您已创建<span id="addressNum_top">@Model.Count() </span>个收货地址，最多可创建20个</span>
                <a href="javascript:;" class="e-btn add-btn">新增收货地址</a>
            </div>
            <div class="mc" id="order_box">

                <table class="tb-void">
                    <thead>
                        <tr>
                            <th width="100">收货人</th>
                            <th width="150">所在地区</th>
                            <th width="200">收货地址</th>
                            <th width="100">电话号码</th>
                            <th width="120">操作</th>
                            <th width="100"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr><td colspan="6" class="ety"><div class="empty">暂时没有记录！</div></td></tr>
                        }
                        @foreach (var m in Model)
                        {
                            var quick = m.IsQuick;
                            var defaultquick = quick ? "default-address" : "";
                            bool isdefault = m.IsDefault;

                            <tr id="@m.Id" class="sm easebuy-m">
                                <td>@m.ShipTo</td>
                                <td data="@m.RegionId">@m.RegionFullName</td>
                                <td>@(m.AddressDetail != null ? m.Address + " " + m.AddressDetail : m.Address)</td>
                                <td fromlatlng="@m.Latitude,@m.Longitude">@m.Phone</td>
                                <td><a class="id_edit" href="javascript:;" data="@m.Id" data-add="@m.Address" data-detail="@(m.AddressDetail==null ? "":m.AddressDetail)">编辑</a><a class="del @(m.NeedUpdate?"delete":"")" href="javascript:;" data-tag="@m.Id">删除</a><a class="update @(m.NeedUpdate?"":"hide")" href="javascript:void(0);" data="@m.Id" data-add="@m.Address" data-detail="@(m.AddressDetail==null ? "":m.AddressDetail)">升级地址</a></td>
                                <td>
                                    <a class="btn-9 default-address @(isdefault?"hide":"")" href="javascript:;" data-id="@m.Id" data-isneedupdate="@m.IsNeedUpdate">设为默认</a>
                                    @if (isdefault)
                                    {
                                        <span class="confirm-gou">默认地址</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


