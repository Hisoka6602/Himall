@{string renminbi = "￥";}
@Html.Raw(Model.showWarp ? "<div class=\"members_con\"><section class=\"members_goodspic\"><ul id=\"" + Model.warpId + "\">" : "")
                @if (@Model.list.Count > 0)
                {
                    for (int i = 0; i < @Model.list.Count; i++)
                    {
                        var good = @Model.list[i];
                        <li class="biggoods">
                            <a class="goodsimg" href="@good.link" islimit="@(good.is_limitbuy?1:0)"><img class="lazyload" data-url="@good.pic" src="@good.pic"></a>
                            @if (@Model.showName || @Model.showPrice)
                            {
                                <section class="members_goodsimg_name rename">
                                    @if (@Model.showName)
                                    {
                                        <a href="@good.link" islimit="@(good.is_limitbuy?1:0)"> @good.title </a>
                                    }
                                    @if (@Model.showIco)
                                        {
                                            if (good.is_limitbuy)
                                            {
                                                <i><a href="@good.link" islimit="@(good.is_limitbuy?1:0)">抢购</a></i>
                                            }
                                            else
                                            {
                                                <i class="add-buy-btn j_productType" productType="@good.productType"><a href="javascript:void(0)" onclick="buyproduct(this)" class="buyproduct" data-pid="@good.product_id">购买</a></i>
                                            }
                                        }
                                    <span>
                                        
                                        @if (@Model.showPrice)
                                        {
                                            @renminbi; @good.price;
                                            <span class="original_price">原价：<s>&yen; @good.original_price</s></span>
                                        }
                                    </span>
                                    @if (good.ProductSaleCountOnOff)
                                    {
                                        <span>销量：<i>@good.SaleCounts</i></span>
                                    }
                                </section>
                            }
                        </li>
                    }
                }
                @Html.Raw(Model.showWarp ? "</ul></section></div>" : "")