@{string renminbi = "￥";}
@Html.Raw(Model.showWarp ? "<div class=\"members_con\"><section class=\"members_goodslist\"><ul id=\"" + Model.warpId + "\">" : "")
            @if (@Model.list.Count > 0)
            {
                for (int i = 0; i < @Model.list.Count; i++)
                {
                    var goods = @Model.list[i];
                    <li class="g-box por rebox">
                        <section><a href="@goods.link" islimit="@(goods.is_limitbuy?1:0)"><img class="lazyload" data-url="@goods.pic" src="@goods.pic" width="88" height="88"></a></section>
                        <section class="g-flex">
                            <a href="@goods.link" islimit="@(goods.is_limitbuy?1:0)"> @goods.title</a>
                            <p>
                                @renminbi @goods.price
                                @if (goods.ProductSaleCountOnOff)
                                {
                                    <span class="xl4">销量：<i>@goods.SaleCounts</i></span>
                                }
                                @if (@Model.showIco)
                                {
                                    if (goods.is_limitbuy)
                                    {
                                        <i class="icon_buy"><a href="@goods.link" islimit="@(goods.is_limitbuy?1:0)">抢购</a></i>
                                    }
                                    else
                                    {
                                        <i class="icon_buy add-buy-btn j_productType" productType="@goods.productType"><a href="javascript:void(0)" onclick="buyproduct(this)" class="buyproduct" data-pid="@goods.product_id">购买11</a></i>
                                    }
                                }
                                </p>
                        </section>
                    </li>
                }
            }
            @Html.Raw(Model.showWarp ? "</ul></section></div>" : "")